<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5"
        />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/layout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />
    <TextView
        android:id="@+id/line1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#f96"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout2"
      />
    <TextView
        android:id="@+id/line2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#c09"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/white"
        android:textSize="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/layout1"
        app:layout_constraintStart_toStartOf="@id/layout2"
        app:layout_constraintEnd_toEndOf="parent"
       />
    <TextView
        android:id="@+id/line3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#606"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/line4"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#909"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="100dp"
        app:layout_constraintTop_toTopOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/layout2"
        />
    <TextView
        android:id="@+id/line5"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#30c"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/white"
        android:textSize="100dp"
        app:layout_constraintTop_toTopOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/layout2"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>